{
    "name": "fiolasoft/elasticsearch",
    "description": "Itegration of elasticsearch/elasticsearch into Nette framework",
    "keywords": ["nette", "fiolasoft", "elasticsearch", "search", "elastic", "es"],
    "homepage": "https://fiolasoft.com",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "nette/di": "^2.4",
        "elasticsearch/elasticsearch": "^6.0"
    },
    "require-dev": {
        "ninjify/qa": "^0.7.1",
        "ninjify/nunjuck": "^0.2.0",
        "monolog/monolog": "^1.23"
    },
    "support": {
        "email": "vojtech.mares@fiolasoft.cz",
        "issues": "https://github.com/FiolaSoft/elasticsearch/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Vojtěch Mareš",
            "email": "ja@vojtamares.cz"
        }
    ],
    "autoload": {
        "psr-4": {
            "FiolaSoft\\": "src/"
        }
    },
    "scripts": {
        "qa": [
            "linter src tests",
            "codesniffer src tests"
        ],
        "tester": [
            "tester -s -p php --colors 1 -C tests/cases"
        ],
        "coverage": [
            "tester -s -p php --colors 1 -C -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
        ],
        "phpstan-install": [
            "mkdir -p temp/phpstan",
            "composer require -d temp/phpstan phpstan/phpstan:0.9.2",
            "composer require -d temp/phpstan phpstan/phpstan-nette:0.9"
        ],
        "phpstan": [
            "temp/phpstan/vendor/bin/phpstan analyse -l 7 -c phpstan.neon src"
        ]
    }
}
